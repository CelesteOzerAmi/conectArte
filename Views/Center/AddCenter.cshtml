@model Center
<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Agregar centro</h1>
    <form asp-action="AddCenter" controller="Center" method="post">

        <div class="form-group">
            <label for="Name">Nombre:</label>
            <input type="text" asp-for="Name" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="City">Ciudad:</label>
            <input type="text" asp-for="City" class="form-control" id="city" name="city">
        </div>
        <div class="form-group">
            <label for="Address">Dirección:</label>
            <input type="text" asp-for="Address" class="form-control" id="address" name="address">
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Teléfono:</label>
            <input type="number" asp-for="PhoneNumber" class="form-control" id="phoneNumber" name="phoneNumber">
        </div>
        <div>
            <label for="CoordinatorId">Coordinador:</label>
            <select id="CoordinatorId" name="CoordinatorId" asp-for="CoordinatorId" class="form-control">
                <option value="">Seleccione un coordinador</option>
                @foreach(var coor in ViewData["Coordinators"] as List<Coordinator>)
                {
                    <option value="@coor.Id">
                        @coor.Name
                    </option>
                }
            </select>
        </div>
        <a href="@Url.Action("Index","Home")" class="btn btn-secondary mt-4">Cancelar</a>
        <button type="submit" class="btn btn-primary">Agregar centro</button>
    </form>

</div>