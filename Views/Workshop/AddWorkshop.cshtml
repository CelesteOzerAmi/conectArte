@model conectArte.Models.Workshop
<div class="text-center">
    <h1 class="display-4" style="font-size: 40px; text-align: center;">Agregar taller</h1>
    <form asp-action="AddWorkshop" method="post">
        <div class="form-group text-center">
            <label for="Name" class="w-100 text-center">Nombre:</label>
            <input asp-for="Name" class="form-control" id="Name" name="Name" />
        </div>
        <div class="form-group text-center">
            <label for="Type" class="w-100 text-center">Tipo:</label>
            <input asp-for="Type" class="form-control" id="Type" name="Type" />
        </div>
        <div class="form-group text-center">
            <label for="MaxCapacity" class="w-100 text-center">Capacidad m√°xima:</label>
            <input asp-for="MaxCapacity" class="form-control" type="number" id="MaxCapacity" name="MaxCapacity" />
        </div>
        <div class="form-group text-center">
            <label for="TeacherId" class="w-100 text-center">Docente:</label>
            <select asp-for="TeacherId" class="form-control" id="TeacherId" name="TeacherId">
                <option value="">Seleccione un docente</option>
                @foreach(var t in ViewData["Teachers"] as List<conectArte.Models.Teacher>) {
                    <option value="@t.Id">@t.Name</option>
                }
            </select>
        </div>
        <div class="form-group text-center">
            <label for="RoomName" class="w-100 text-center">Sala:</label>
            <select asp-for="RoomName" class="form-control" id="RoomName" name="RoomName">
                <option value="">Seleccione una sala</option>
                @foreach(var r in ViewData["Rooms"] as List<conectArte.Models.Room>) {
                    <option value="@r.Name">@r.Name</option>
                }
            </select>
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">Agregar taller</button>
        </div>
    </form>
</div> 