@model conectArte.Models.Workshop
@{
    ViewData["Title"] = "Update Workshop";
    var teachers = ViewData["Teachers"] as List<conectArte.Models.Teacher>;
    var rooms = ViewData["Rooms"] as List<conectArte.Models.Room>;
}
<h2>Modificar Taller</h2>
<form asp-action="UpdateWorkshop" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Tipo</label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Capacidad máxima</label>
        <input asp-for="MaxCapacity" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label>Docente</label>
        <select asp-for="TeacherId" class="form-control">
            <option value="">Seleccione un docente...</option>
            @foreach(var t in teachers) {
                <option value="@t.Id">@t.Name</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label>Sala</label>
        <select asp-for="RoomName" class="form-control">
            <option value="">Seleccione una sala...</option>
            @foreach(var r in rooms) {
                <option value="@r.Name">@r.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form> 