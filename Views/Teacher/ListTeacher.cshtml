@model List<Teacher>

<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Lista de docentes</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre completo</th>
                <th>Especialidad</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => teacher.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => teacher.Specialty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => teacher.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => teacher.Email)
                    </td>
                    <td>
                        <form controller="Teacher" method="post">
                            <input type="hidden" name="id" asp-for="@teacher.Id" />
                            <a asp-action="UpdateTeacher" class="btn btn-sm btn-primary" asp-route-Id="@teacher.Id">Modificar</a>
                            <input type="submit" value="Eliminar" asp-action="DeleteTeacher" class="btn btn-sm btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>