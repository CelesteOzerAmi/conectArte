@model Coordinator

<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Modificar coordinador</h1>
    <form asp-action="UpdateCoordinator" controller="Coordinator" method="post">
        <div class="form-group">
            <label for="Name">Nombre completo:</label>
            <input type="text" value="@Model.Name" asp-for="Name" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Teléfono:</label>
            <input type="number" value="@Model.PhoneNumber" asp-for="PhoneNumber" class="form-control" id="phoneNumber" name="phoneNumber">
        </div>
        <a href="@Url.Action("ListCoordinator", "Coordinator")" class="btn btn-secondary text-white mt-2">Cancelar</a>

        <button type="submit" class="btn btn-primary mt-2">Modificar coordinador</button>
    </form>

</div>