@model Resource
<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Agregar recurso</h1>
    <form asp-action="AddResource" controller="Resource" method="post">

        <div class="form-group">
            <label for="Name">Nombre:</label>
            <input type="text" asp-for="Name" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="Stock">Cantidad disponible:</label>
            <input type="number" asp-for="Stock" class="form-control" id="stock" name="stock">
        </div>

        <button type="submit" class="btn btn-primary">Agregar recurso</button>
    </form>

</div>